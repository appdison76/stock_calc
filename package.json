{
  "name": "stock_calculator_rn",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "start:dev": "adb reverse tcp:8081 tcp:8081 && expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test-build": "expo run:android",
    "build:debug": "cd android && gradlew.bat assembleDebug",
    "build:debug:install": "powershell -ExecutionPolicy Bypass -File scripts/build-and-install.ps1 debug",
    "build:release": "cd android && gradlew.bat assembleRelease",
    "build:release:install": "powershell -ExecutionPolicy Bypass -File scripts/build-and-install.ps1 release",
    "version:patch": "powershell -ExecutionPolicy Bypass -File scripts/increment-version.ps1 patch",
    "version:minor": "powershell -ExecutionPolicy Bypass -File scripts/increment-version.ps1 minor",
    "version:major": "powershell -ExecutionPolicy Bypass -File scripts/increment-version.ps1 major"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "date-fns": "^4.1.0",
    "expo": "~54.0.30",
    "expo-application": "^7.0.8",
    "expo-constants": "^18.0.12",
    "expo-dev-client": "~6.0.20",
    "expo-device": "^8.0.10",
    "expo-file-system": "^19.0.21",
    "expo-haptics": "^15.0.8",
    "expo-image": "^3.0.11",
    "expo-linear-gradient": "^15.0.8",
    "expo-linking": "^8.0.11",
    "expo-notifications": "^0.32.15",
    "expo-router": "^6.0.21",
    "expo-screen-orientation": "^9.0.8",
    "expo-sharing": "^14.0.8",
    "expo-sqlite": "^16.0.10",
    "expo-status-bar": "~3.0.9",
    "expo-updates": "^29.0.15",
    "expo-web-browser": "^15.0.10",
    "fast-xml-parser": "^5.3.3",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gifted-charts": "^1.4.70",
    "react-native-google-mobile-ads": "^16.0.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.15.1",
    "react-native-view-shot": "^4.0.3"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "typescript": "~5.9.2"
  },
